<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarToolbar"
            android:layout_width="371dp"
            android:layout_height="76dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            app:contentInsetStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginLeft="20dp"
            app:layout_goneMarginRight="40dp"
            app:layout_constraintBottom_toTopOf="@+id/txtMatrials">

            <LinearLayout
                android:id="@+id/linearRowellipseone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/imageEllipseOne"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:background="@drawable/img_ellipse1"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_ellipse1" />

                <LinearLayout
                    android:id="@+id/linearColumnnastyasamantha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="0.7"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtNastyaSamantha"
                        android:fontFamily="@font/interbold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:ellipsize="end"
                        android:lineSpacingExtra="1dp"
                        android:singleLine="true"
                        android:text="@string/nastya_samantha" />

                    <TextView
                        android:id="@+id/txtProductdesigne"
                        android:fontFamily="@font/interregular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:layout_marginEnd="10dp"
                        android:ellipsize="end"
                        android:lineSpacingExtra="1dp"
                        android:singleLine="true"
                        android:text="@string/product_designer_at_abcd" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageRefresh"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="16dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_refresh_18x20"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_refresh_18x20" />

                <ImageView
                    android:id="@+id/imageNotification"
                    android:layout_width="18dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="29dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="16dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_notification"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_notification" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <TextView android:ellipsize="end"
            android:id="@+id/txtMatrials"
            android:layout_height="wrap_content"
            android:layout_weight="0.55"
            android:layout_width="0dp"
            android:lineSpacingExtra="1dp"
            android:singleLine="true"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbarToolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/RecyclerView"



            style="@style/txtInterbold20" tools:text="matrials"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
app:layout_constraintBottom_toTopOf="@+id/recycler_view"
            android:layout_marginBottom="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtMatrials"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="324dp"
            android:layout_height="434dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/RecyclerView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</FrameLayout>