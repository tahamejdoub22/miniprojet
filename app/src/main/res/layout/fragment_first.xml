<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_5"
    tools:context=".onboarding.screens.FirstScreen"
    >

    <ImageView
        android:id="@+id/screen1_iv"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/img_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/findText"
        android:layout_width="301dp"
        android:layout_height="63dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/interbold"

        android:text="@string/find_your_nearest_recycle_station"
        android:textColor="@color/black"

        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/screen1_iv" />

    <TextView
        android:id="@+id/descBoard"
        android:textColor="@color/black"
        android:layout_width="221dp"
        android:layout_height="119dp"
        android:layout_marginTop="24dp"
        android:text="@string/amet_minim_mollit_non_deserunt_ullamco_est_sit_aliqua_dolor_do_amet_sint_velit_officia_consequat_duis_enim_velit_mollit_exercitation_veniam_consequat_sunt_nostrud_amet"
        android:fontFamily="@font/interregular"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/screen1_iv"
        app:layout_constraintTop_toBottomOf="@id/findText"
        app:layout_constraintEnd_toStartOf="@id/nextImgButton"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ImageView
        android:id="@+id/nextImgButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:src="@drawable/img_group1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toEndOf="@id/descBoard"
        android:layout_marginBottom="60dp"
        app:layout_constraintTop_toBottomOf="@id/findText"
        />
</androidx.constraintlayout.widget.ConstraintLayout>